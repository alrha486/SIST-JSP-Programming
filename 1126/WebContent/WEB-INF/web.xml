<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>1126</display-name>
  
  <servlet>
  	<servlet-name>Hello</servlet-name>
  	<servlet-class>com.example.HelloServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>Hello</servlet-name>
  	<url-pattern>/servlets/servlet/Hello</url-pattern>
  </servlet-mapping>
  
  <filter>
  	<filter-name>MyFilter</filter-name>
  	<filter-class>com.example.filter.MyFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>MyFilter</filter-name>
  	<!-- <url-pattern>*.jsp</url-pattern>    jsp page filter할 때-->
  	<servlet-name>Hello</servlet-name>   <!-- 특정 Servlet에 접근할 때 -->
  </filter-mapping>
  
</web-app>